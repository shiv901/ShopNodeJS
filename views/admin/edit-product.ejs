<%- include('../partials/head') %>

    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/forms.css">

<%- include('../partials/nav') %>

<main>
   <form class="product-form" action="/admin/<% if(editing) {%>edit-product<% } else {%>add-product<% } %>" method="POST">
      <div class="form-control">
          <label for="title">Title</label>
          <input type="text" name="title" id="title" value="<% if(editing){ %> <%=prod.title%> <%}%>">
      </div>
      <div class="form-control">
          <label for="imageUrl">Image URL</label>
          <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%=prod.imageUrl %> <% } %>">
      </div>
      <div class="form-control">
          <label for="price">Price</label>
          <input type="number" name="price" id="price" step="0.01" value="<%= editing ? prod.price : ''%>">
      </div>
      <div class="form-control">
          <label for="title">Description</label>
          <textarea name="description" id="description" id="description"><%= editing ? prod.description : ''%></textarea>
      </div>

      <% if (editing) { %>
       <input type="hidden" name="prodId" value="<%= prod.id %>">
      <% } %>

      <button class="btn" type="submit"><% if(editing) {%> Update Product <% } else {%> Add Product <% } %></button>
  </form>
</main>

<%- include('../partials/end')%>