<%- include('../partials/head') %>
<%- include('../partials/nav') %>

<main>
   <div class="container">
      <h1 class="display-5 text-center">My Orders</h1>
      <ul class="list-group">
         <% if (orders.length > 0) { %>
            <% orders.forEach((order,i) => { %>
               <h5 class="mt-3">Order#<%=i+1%></h5>
                  <li class="list-group-item d-flex align-items-center">
                     <!-- <ul> -->
                        <% order.products.forEach(items => { %>
                          <div class="card mx-2 my-1 p-2" style="max-width: 27rem">
                             <b><%=items.product.title %></b> 
                             <div class="card-body d-flex">
                                <img src="<%=items.product.imageUrl %>" alt="item-image" width="150" class="img-fluid">
                                <div class="px-3 d-flex flex-column">
                                   <span>Desc: <small><%=items.product.description %></small></span>
                                   <span>Price: $<%=items.product.price %></span>
                                   <span>Units: <span class="badge bg-primary"><%=items.quantity %></span></span>
                                   <span>Total Amount: <b>$<%= items.product.price * items.quantity %>/-</b></span>
                                </div>
                             </div>
                          </div>
                        <% }) %>
                     <!-- </ul> -->
                  </li>
            <%})%>
         <%}else{%>
            <h2>No Orders here!</h2>
         <%}%>
      </ul>

      <ul class="list-group d-none">
         <li class="list-group-item d-flex justify-content-between align-items-center">
           A list item
           <span class="badge bg-primary rounded-pill">14</span>
         </li>
         <li class="list-group-item d-flex justify-content-between align-items-center">
           A second list item
           <span class="badge bg-primary rounded-pill">2</span>
         </li>
         <li class="list-group-item d-flex justify-content-between align-items-center">
           A third list item
           <span class="badge bg-primary rounded-pill">1</span>
         </li>
       </ul>
   </div>
   
</main>

<%- include('../partials/end')%>